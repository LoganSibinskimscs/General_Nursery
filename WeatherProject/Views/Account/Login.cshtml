@model WeatherProject.Models.ViewModels.LoginViewModel

<h2>Sign In</h2>
<div class="row">
    <div class="col-md-8">
        <section id="loginForm">
            <form id="account" method="post" asp-action="Login" asp-controller="Account">
                <h4>Use Username and password to login.</h4>
                <hr />
                @*<div asp-validation-summary="All" class="text-danger"></div>*@
                <div class="form-group row">
                    <label class="col-md-2" asp-for="UserName"></label>
                    <div class="col-md-10">
                        <input asp-for="UserName" class="text-danger" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-md-2" asp-for="Password"></label>
                    <div class="col-md-10">
                        <input asp-for="Password" class="text-danger" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-10 offse-md-2 checkbox">
                        <label asp-for="RememberMe" class="pr-4 pl-0">
                            <input asp-for="RememberMe" />
                        </label>
                        Remember me?
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-10 offse-md-2">
                        <input type="submit" value="Log in" class="btn btn-success" />
                    </div>
                </div>
            </form>
        </section>
</div>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}